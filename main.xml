<simulation xmlns:xi="http://www.w3.org/2001/XInclude">
  
  <schematype>flat</schematype>
  <control>
    <duration>1200</duration>
    <startmonth>1</startmonth>
    <startyear>2015</startyear>
    <decay>never</decay>
  </control>
  
  <archetypes>
    <spec> <lib>cycamore</lib> <name>Source</name></spec>
    <spec> <lib>cycamore</lib> <name>DeployInst</name></spec>
    <spec> <lib>cycamore</lib> <name>Sink</name></spec>
    <spec> <lib>cycamore</lib> <name>Enrichment</name> </spec>
    <spec> <lib>cycamore</lib> <name>Reactor</name> </spec>
    <spec> <lib>cycamore</lib> <name>Storage</name> </spec>
    <spec> <lib>cycamore</lib> <name>FuelFab</name> </spec>
    <spec> <lib>cycamore</lib> <name>MixingFab</name> </spec>
    <spec> <lib>cycamore</lib> <name>Separations</name> </spec>
  </archetypes>
  <recipe>
    <name>FBR_driver_upu_E1</name>
    <basis>mass</basis>
    <nuclide> <id>U238</id>  <comp>0.883885</comp> </nuclide>
    <nuclide> <id>PU239</id> <comp>0.116115</comp> </nuclide>
  </recipe>
  <!-- *********************** -->
  
  <!-- upu E2 recipe -->
  <recipe>
    <name>FBR_blanket_upu_E2</name>
    <basis>mass</basis>
    <nuclide> <id>U238</id>  <comp>0.9167665</comp> </nuclide>
    <nuclide> <id>PU239</id> <comp>0.0832335</comp> </nuclide>
  </recipe>


  
  <prototype>
    <name>Source_Stream1</name>
    <config>
      <Source>
        <outcommod>Stream1</outcommod>
        <outrecipe>FBR_blanket_upu_E2</outrecipe>
        
        <inventory_size>1000000</inventory_size>
        <throughput>1e100</throughput>
      </Source>
    </config>
  </prototype>
  
  <prototype>
    <name>Source_Stream2</name>
    <config>
      <Source>
        <outcommod>Stream2</outcommod>
        <outrecipe>FBR_driver_upu_E1</outrecipe>
        
        <inventory_size>1000000</inventory_size>
        <throughput>1e100</throughput>
      </Source>
    </config>
  </prototype>
  
  
  <prototype>
    <name>Mixing_Fab</name>
    <config>
      <MixingFab>
        
        <in_commods>
          <val>Stream1</val>
          <val>Stream2</val>
        </in_commods>
        
        <commods_size>
          <val>100000</val>
          <val>100000</val>
        </commods_size>
        
        <commods_frac>
          <val>0.141146</val>
          <val>0.858854</val>
        </commods_frac>
        
        
        <throughput>1000000</throughput>
        
        <outcommod>MIX</outcommod>
        <outputbuf_size>10000000</outputbuf_size>
        
      </MixingFab>
    </config>
  </prototype>
  
  <!--       FBR blanket Storage       -->
  <prototype>
    <name>Mix_storage</name>
    <config>
      <Storage>
        <in_commods> <val>MIX</val></in_commods>
        <out_commods> <val>MIX_Stored</val></out_commods>
        <residence_time>0</residence_time>
      </Storage>
    </config>
  </prototype>
  
  <prototype>
    <name>waste</name>
    <config>
      <Sink>
        <in_commods><val>waste</val></in_commods>
        <capacity>1e100</capacity>
      </Sink>
    </config>
  </prototype>
  
  <prototype>
    <name>deployer</name>
    <config>
      <DeployInst>
        <prototypes>
          
          <val>Source_Stream1</val>
          <val>Source_Stream2</val>
          
          <val>Mixing_Fab</val>
          <val>Mix_storage</val>
          

        </prototypes>
        
        <build_times>
          <val>1</val>
          <val>1</val>
           <val>1</val>
          <val>1</val>
          
        </build_times>
        
        <n_build>
          <val>1</val>
          <val>1</val>
          <val>1</val>
          <val>1</val>
        </n_build>
      </DeployInst>
    </config>
  </prototype>
  
  
  <agent> <name>deployer</name> <prototype>deployer</prototype> </agent>
  
  
  
</simulation>
